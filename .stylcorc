{
    "basedir": "_src/styles/main",
    "file_ext": ".scss",
    "import_rule": "@import",
    "import_with_ext": false,
    "append_to_buildfile": true,
    "allow_buildfile_outside_basedir": true,
    "use_semicolons": true,
    "quote": "'",
    "indent": "    ",
    "newline": "\n",
    "ensure_trailing_newline": true,
    "file_write_options": "utf8",
    "virtual_component_prefix": "_",
    "files": {
        ".": {
            "filename": "{{NAME}}",
            "imports": ["_"],
            "import_extend_source": true,
            "content": "{{NEWLINE}}.{{NAME}} {{{NEWLINE}}{{INDENT}}// your code here{{NEWLINE}}}",
            "no_virtual": true
        },
        "c": {
            "filename": "{{NAME}}__constants",
            "imports": [],
            "import_extend_source": true,
            "content": "{{IMPORT}} {{QUOTE}}../_base/__{{QUOTE}};",
            "no_virtual": ["content"]
        },
        "m": {
            "filename": "{{NAME}}__mixins",
            "imports": ["c"],
            "import_extend_source": true,
            "content": "{{IMPORT}} {{QUOTE}}../_base/__{{QUOTE}};",
            "no_virtual": ["content"]
        },
        "_": {
            "filename": "__",
            "imports": ["c", "m"],
            "import_extend_source": false,
            "content": null,
            "no_virtual": false
        },
        "i": {
            "filename": "../{{NAME}}",
            "imports": ["_", "."],
            "import_extend_source": false,
            "content": null,
            "no_virtual": false
        }
    }
}
